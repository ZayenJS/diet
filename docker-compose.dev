version: '3.8'
services:
  go:
    build:
      context: ./server
      dockerfile: dev.Dockerfile
    container_name: diet-api
    ports:
      - 8080:3000
    depends_on:
      - mysql
    volumes:
      - ./server:/app

  mysql:
    image: mysql:5.7
    container_name: diet-db
    environment:
      - MYSQL_DATABASE=dier
      - MYSQL_USER=diet
      - MYSQL_PASSWORD=diet
      - MYSQL_ROOT_PASSWORD=root
    healthcheck:
      test: ['CMD', 'mysqladmin', 'ping', '-h', 'localhost']
      timeout: 5s
      retries: 10

volumes:
  mysql:
